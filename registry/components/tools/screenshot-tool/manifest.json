  "docs": "Requires SCREENSHOTONE_API_KEY env var. Captures webpage screenshots as URLs.",
  "categories": ["api", "screenshot", "web"],
  "changelog": [
    { "version": "1.0.0", "date": "2026-03-01", "type": "initial", "note": "Initial release" }
  ]
}
