{
  "name": "screenshot-tool",
  "type": "kitn:tool",
  "description": "Capture screenshots of web pages using ScreenshotOne API",
  "dependencies": ["ai", "zod"],
  "registryDependencies": ["core"],
  "envVars": {
    "SCREENSHOTONE_API_KEY": { "description": "ScreenshotOne access key", "url": "https://screenshotone.com/", "required": true, "secret": true }
